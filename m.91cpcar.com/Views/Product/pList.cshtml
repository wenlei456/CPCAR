    <meta name="keywords" content="诚配,诚配改装,汽车改装,改装件,汽车配件,海外配件,进口配件,保时捷,宝马,奔驰,法拉利,豪车改装,高端改装">
    <meta name="description" content="">   <meta  />
       <link href="/New/content/css/mui.css" rel="stylesheet" />
     <link href="/New/content/css/main.css" rel="stylesheet" />
		<style type="text/css">
			#list {
				/*避免导航边框和列表背景边框重叠，看起来像两条边框似得；*/
				margin-top: -1px;               
			}
			.head-title,.mui-pull-left{background:none;}
			.mui-pull-left{width: auto;margin: 0;}
			.mui-icon-back:before, .mui-icon-left-nav:before{color:#666;}
			.head-title{font-size:1rem;}
			.mui-bar-nav ~ .mui-content{padding:44px 0 1px 0;}
			ul.mui-table-view{display:inline-block;width:100%;padding:10px 0;}
			.mui-table-view-cell{float:left;width:50%;margin:0;border-bottom: solid 1px #d3d3d3;position:relative;height:275px;}
			.mui-table-view-cell:before{position: absolute;z-index: 1;left:0;top:0;content:"";width: 1px;height:100%;background:#d3d3d3;overflow:hidden;}
			.cate-list-content .mui-pull-right:first-child{display:none;}
			.mui-pull-left{height:auto;}
			.mui-table-view .mui-media-object{width:100%;}
			.mui-table-view-cell > a:not(.mui-btn){margin:10px 10px 0 10px;padding-bottom:2.5rem;}
			.mui-table-view-cell > a:not(.mui-btn) img{}
			.mui-table-view-cell > a .cate-list-content{display:none;}
			.cate-list-title{height:2.5rem;text-overflow:ellipsis;overflow: hidden;}
			.mui-media-body{position:absolute;z-index: 1;bottom:0;left:0;width: 100%;}
			#item1 img{max-width: 100% !important;}
			.head-ico{margin-right:10px;}
			@@media screen and (max-width: 413px) {
				.mui-ios .mui-table-view-cell{height:265px;}
			}
			@@media screen and (max-width: 374px) {
				.mui-ios .mui-table-view-cell{height:235px;}
			}
		</style>
    <script>
