@{
    ViewBag.Title = "CarsInfoQuery";
    Layout = "~/Views/Shared/_master.cshtml";
}

<div class="content-box">

    <!-- Start Content Box -->
    <div class="content-box-header2">
        <h3>车型维护</h3>
        <ul class="content-box-tabs">
            <li><a href="#tab1" class="default-tab">所有列表</a></li>
            <!-- href must be unique and match the id of target div -->
            <li><a href="#tab2" id="f1">添加</a></li>
        </ul>
        <div class="clear"></div>
    </div>
    <!-- End .content-box-header -->
    <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1">
            <div>
                <div class="bulk-actions">
                    品牌: 
                    <select name="dropdown">
                        <option value="option1">Last a Month</option>
                        <option value="option2">Last Six Months</option>
                        <option value="option3">Last a Year</option>
                    </select>&nbsp;&nbsp;
                     型号:
                    <select name="dropdown">
                        <option value="option1">Last a Month</option>
                        <option value="option2">Last Six Months</option>
                        <option value="option3">Last a Year</option>
                    </select>&nbsp;&nbsp;
                     关键词：<input type="text" class="text-input" />
                    <a class="button" href="#">搜索</a>
                </div>

            </div>


            <table width="100%">
                <thead>
                    <tr>
                        <th valign="middle">
                            <input class="check-all" type="checkbox" /></th>
                        <th valign="middle">品牌</th>
                        <th valign="middle">型号</th>
                        <th valign="middle">年份</th>
                        <th valign="middle">发动机</th>
                        <th valign="middle">燃料</th>
                        <th valign="middle">状态</th>
                        <th valign="middle"></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="8">

                            <button class="button">删除</button>
                            <div class="clear"></div>
                        </td>
                    </tr>
                </tfoot>
                <tbody style="font-size: 12px">
                </tbody>
            </table>
        </div>
        <!-- End #tab1 -->
        <div class="tab-content" id="tab2" style="width: 100%">

            <table width="30%">
                <tr>
                    <td>品牌:</td>
                    <td>
                        <select name="dropdown">
                            <option value="option1" checked>从已有中选择</option>
                            <option value="option2">BMWs</option>
                            <option value="option3">AOdi</option>
                        </select></td>
                    <td>
                        <input type="text" placeholder="添加新品牌" /></td>
                </tr>
                <tr>
                    <td>型号:</td>
                    <td>
                        <input type="text" /></td>
                    <td></td>
                </tr>
                <tr>
                    <td>年份:</td>
                    <td>
                        <select name="dropdown">
                            <option value="option1" checked>从已有中选择</option>
                            <option value="option2">BMWs</option>
                            <option value="option3">AOdi</option>
                        </select></td>
                    <td></td>
                </tr>
                  <tr>
                    <td>发动机:</td>
                    <td>
                        <select name="dropdown">
                            <option value="option1" checked>从已有中选择</option>
                            <option value="option2">BMWs</option>
                            <option value="option3">AOdi</option>
                        </select></td>
                    <td> <input type="text" placeholder="添加新型号" /></td>
                </tr>
                  <tr>
                    <td>燃料:</td>
                    <td>
                        <select name="dropdown">
                            <option value="option1" checked>汽油</option>
                            <option value="option2">柴油</option>
                            <option value="option3">混合动力</option>
                        </select></td>
                    <td></td>
                </tr>
                <tfoot>
                    <tr>

                        <td><button class="button">保存</button></td>
                    </tr>

                </tfoot>
            </table>
            <div class="clear">
            </div>
            <!-- End .clear -->

        </div>
        <!-- End #tab2 -->
    </div>
    <!-- End .content-box-content -->
</div>

