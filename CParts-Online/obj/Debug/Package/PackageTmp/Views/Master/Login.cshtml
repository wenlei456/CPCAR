@model CParts_Online.Models.Master.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>诚配后台管理登录</title>
    <script src="~/Content/jslib/jquery-1.11.2.js"></script>
      <script src="~/Content/js/common/base.js"></script>
    <script src="~/Content/jslib/jquery.validate.js"></script>
     <script src="~/Content/jslib/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css"/>
</head>
<body>
    <div>
         @using (Html.BeginForm("Login", "Master", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "LoginForm" }))
{          
            <div class="modal-header">
              
                <h2 class="modal-title" id="myModalLabel">登录</h2>
            </div>
            <div class="modal-body">
                     
                <div class="form-group">
                        <label for="loginName" class="col-sm-3 control-label"></label>
                        <div class="col-sm-5">
                           <h4 style="color:red">@ViewBag.loginFail</h4>
                        </div>
                     
                    </div>
                    <div class="form-group">
                        <label for="loginName" class="col-sm-3 control-label">用户名</label>
                        <div class="col-sm-5">
                             @Html.TextBoxFor(m => m.loginName, new { @class = "form-control", id = "loginName", placeholder = "用户名/邮箱/手机号" })
             
                        </div>
                         @Html.ValidationMessageFor(m => m.loginName)
                     
                    </div>
                    <div class="form-group">
                        <label for="passWord" class="col-sm-3 control-label">密码</label>
                        <div class="col-sm-5">
                            @Html.PasswordFor(m => m.passWord, new { @class = "form-control", id = "passWord", placeholder = "密码" })
                </div>
                @Html.ValidationMessageFor(m => m.passWord)
                    </div>
                  
                    <div class="form-group">
                        <label for="VeriCode" class="col-sm-3 control-label">输入验证码</label>
                        <div class="col-sm-2">
                            @Html.TextBoxFor(m => m.VeriCode, new { @class = "form-control", id = "VeriCode" })
                            @Html.ValidationMessageFor(m => m.VeriCode)
                        </div>
                        <img src="/ValidateCode.ashx" id="changeVerCode" style="cursor: pointer" alt="看不清楚，换一个" title="看不清楚，换一个" />

                    </div>

                <div class="form-group">
                    <label for="VeriCode" class="col-sm-3 control-label"></label>
                    <div class="col-sm-3">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                            登录
                        </button>
                    </div>

                </div>

                 <div class="form-group">
                      <label for="VeriCode" class="col-sm-3 control-label"></label>
                                    
                       
                    </div>
              
            </div>
}        
    </div>
</body>
</html>
<script>
    $(function () {
        //换验证码
        $("#changeVerCode").click(function () {
            $(this).attr("src", "/ValidateCode.ashx?" + getnow());

        })

    })

</script>