@section scripts{
      <script language="javascript" type="text/javascript" src="/resources/scripts/My97DatePicker/WdatePicker.js"></script>
    <script>
        $(function () {
            $("#active_BeginHour option,#active_Beginmin option,#active_EndHour option,#active_Endmin option").remove();
            var hours = []; var min = [];
            for (var i = 0; i < 24; i++) {
                hours.push('<option value="'+i+'">'+i+'时</option>');
            }
            for (var i = 1; i <= 60; i++) {
                min.push('<option value="' + i + '">' + i + '分</option>');
            }
            $("#active_BeginHour,#active_EndHour").append(hours.join(""));
            $("#active_Beginmin,#active_Endmin ").append(min.join(""));
        })
    </script>
    }