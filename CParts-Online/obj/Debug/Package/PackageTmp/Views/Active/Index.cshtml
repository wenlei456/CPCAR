@model CParts_Online.Controllers.OutModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>测试活动列表页面</title>
    <style>
        .pro {
        width:25%;
        padding:10px;
        float:left;
        }
        .price {
        text-decoration: line-through;
        }
        .pro-1, .pro-2 {
        width:100%;
        padding:0px 50px;
        }
    </style>
</head>
<body style="margin:0px; padding:0px;">
    <div style="background-image:url(/html/5-1/bg.jpg); width:1000px; margin:0px auto;">
        @if (Model.active != null)
        {
            @*<h3>@Model.active.Name</h3>
            <h4>测试优惠产品列表</h4>*@
             <div><img src="/html/5-1/1.png" style="width:100%" /></div>
              <div><img src="/html/5-1/2.png" style="width:100%" /></div>
                for (int item = 0; item < Model.parts.Count; item++)
                {
                    if (item % 2 == 0)
                    {
                        var ap = Model.activePro.Where(m => m.ProID == Model.parts[item].ID).FirstOrDefault();
                        
                        int i = ap == null ? 0 : Convert.ToInt32(ap.Stock) ; 
                        <div class="pro-1">
                            <a href="/Active/ProDetail?id=@Model.parts[item].ID&&aid=@Model.active.ID">
                                <div style="float:left; padding-top:50px">
                                    <img src="@Model.parts[item].imgpath" style="width:300px" />
                                </div>
                                <div style="float:left;"><img src="~/html/5-1/hu_zuo.png"/></div>
                                <div style="float:left; padding-top:180px;margin-left: -99px;color:#faf83c; font-size:38px; font-weight:600">
                                         <div style="max-width:500px">
                                    @Model.parts[item].PartName
                                        </div>
                                    <div style="padding:20px 100px;">
                                        <div style="float:left;" ><img  src="~/html/5-1/free.png"/></div>
                                         <div style="float:left; margin-left:30px;position:relative" ><img  src="~/html/5-1/qty_pao.png"/><div style="position:absolute; left:15px;top:25px; color:#044171; font-size:30px">限量<br />@(i)套</div></div>
                                          <div style="clear:both;"></div>
                                    </div>
                                </div>
                                  <div style="clear:both;"></div>
                            </a>
                        </div>

                    }
                    else
                    {
                       var ap = Model.activePro.Where(m => m.ProID == Model.parts[item].ID).FirstOrDefault();
                        
                        int i = ap == null ? 0 : Convert.ToInt32(ap.Stock) ; 
                        <div class="pro-1">
                            <a href="/Active/ProDetail?id=@Model.parts[item].ID&&aid=@Model.active.ID">
                                      <div style="float:left; padding-top:100px;color:#faf83c; font-size:38px; font-weight:600">
                                         <div style="text-align:center; max-width:500px">
                                    @Model.parts[item].PartName
                                        </div>
                                    <div style="padding:20px 100px;">
                                        <div style="float:left;" ><img  src="~/html/5-1/free.png"/></div>
                                         <div style="float:left; margin-left:30px;position:relative" ><img  src="~/html/5-1/qty_pao.png"/><div style="position:absolute; left:15px;top:25px; color:#044171; font-size:30px">限量<br />@(i)套</div></div>
                                          <div style="clear:both;"></div>
                                    </div>
                                </div>
                                <div style="float:left; padding-top:50px">
                                    <img src="@Model.parts[item].imgpath" style="width:300px" />
                                </div>                            
                          
                                  <div style="clear:both;"></div>
                            </a>
                        </div>

                    }


                }
                    <div><img src="/html/5-1/7.png" style="width:100%" /></div>
        }
        else
        {
            <p>活动不存在</p>
        }

    </div>
</body>
</html>
